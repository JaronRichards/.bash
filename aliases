# Aliases

# History with grep built in
alias hsg='history |grep'
alias cr='credstash -r ca-central-1'

# To be used in /backend for easy access symfony commands
alias bnc='./bin/console'

# File listing options
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Auto color support
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'i
